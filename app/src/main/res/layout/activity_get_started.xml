<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.GetStarted">

    <LinearLayout
        android:layout_marginLeft="-20dp"
        android:layout_marginRight="-20dp"
        android:background="@drawable/bc_getstarted3"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:background="#5C00191E"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:id="@+id/bottom"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:paddingVertical="10dp"
            android:layout_width="wrap_content"
            android:text="Allready have account?"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="16sp"
            android:paddingVertical="10dp"
            android:id="@+id/tv_login"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:text="Log In"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="30dp"
        android:layout_above="@id/bottom"
        android:id="@+id/tv_btnGetStarted"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardBackgroundColor="#50D3C2"
        app:cardCornerRadius="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="Get started"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            app:cardCornerRadius="10dp"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:text="Trip"
                android:textSize="24dp" />

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Trip"
                android:textColor="#ffb300"
                android:textSize="24dp" />
        </LinearLayout>

        <TextView
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:text="Best apps for your holiday"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>